@section scripts{ 
<script>

    $( "#create" ).click(function() {
       var formdata = { id: '', userid:'@ViewBag.id',title: $('#title').val(),Email:$('#email') .val(),Mobile:$('#mob').val(),description:$('#desc').val()};
            $.ajax({
                headers: {
                    'Content-Type': 'application/json'
                },
                type: 'POST',
                url: 'https://localhost:44303/Complaint/v1/Create',
                data: JSON.stringify(formdata),
                success: function (response) {
                    console.log(response);
                    if (response.status == 200) {
                        window.location.href = "@Url.Action("Index")";
                    }
                    else {
                        alert('error');
                    }

                },
                error: function () {

                  alert('error');
                }

            });
});

</script>


}
